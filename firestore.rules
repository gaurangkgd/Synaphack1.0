rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Events collection
    match /events/{eventId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create and update if user is authenticated and is the organizer
      allow create, update: if request.auth != null 
        && (request.auth.uid == resource.data.organizerId 
            || request.auth.uid == request.resource.data.organizerId);
      
      // Allow delete if user is the organizer
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.organizerId;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Messages collection for communication
    match /messages/{messageId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create if user is authenticated
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.senderId;
      
      // Allow update if user is the sender or organizer
      allow update: if request.auth != null 
        && (request.auth.uid == resource.data.senderId);
      
      // Allow delete if user is the sender or has moderation rights
      allow delete: if request.auth != null 
        && (request.auth.uid == resource.data.senderId);
    }
    
    // Channels collection
    match /channels/{channelId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create/update by organizers
      allow create, update: if request.auth != null;
      
      // Allow delete by organizers
      allow delete: if request.auth != null;
    }
    
    // Event communication settings
    match /eventCommunication/{eventCommId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create/update by organizers
      allow create, update: if request.auth != null;
    }
    
    // Registrations collection
    match /registrations/{registrationId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create if user is authenticated
      allow create: if request.auth != null;
      
      // Allow update/delete by the participant or organizer
      allow update, delete: if request.auth != null;
    }
    
    // Profiles collection
    match /profiles/{profileId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create/update if user is authenticated
      allow create, update: if request.auth != null;
    }
    
    // Certificates collection
    match /certificates/{certificateId} {
      // Allow read access to authenticated users (for verification)
      allow read: if request.auth != null;
      
      // Allow create by system/organizers (automatic generation)
      allow create: if request.auth != null;
      
      // Allow update by organizers only
      allow update: if request.auth != null;
      
      // Prevent deletion of certificates for audit purposes
      allow delete: if false;
    }
    
    // Certificate templates collection
    match /certificateTemplates/{templateId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create/update by organizers
      allow create, update: if request.auth != null;
    }
    
    // Submissions collection
    match /submissions/{submissionId} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create/update by participants and organizers
      allow create, update: if request.auth != null;
      
      // Allow delete by organizers and submission owners
      allow delete: if request.auth != null;
    }
    
    // For development - uncomment the line below to allow all reads/writes
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}
