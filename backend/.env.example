# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://hackuser:hackpass123@localhost:5432/hackathon_platform
MONGODB_URL=mongodb://hackuser:hackpass123@localhost:27017/hackathon_announcements

# Security Configuration
SECRET_KEY=your_super_secret_jwt_key_here_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_STORAGE_CONTAINER=hackathon-uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@hackplatform.com

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["pdf", "ppt", "pptx", "doc", "docx", "zip", "png", "jpg", "jpeg"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Optional: Third-party Integrations
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_ID=your_analytics_tracking_id

# Development/Production Environment
ENVIRONMENT=development  # or 'production'
