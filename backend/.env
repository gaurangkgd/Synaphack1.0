# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# -------------------------
# Database configuration
# -------------------------
DATABASE_URL=sqlite:///./hackathon_platform.db
MONGODB_URL=mongodb://hackuser:hackpass123@localhost:27017/hackathon_announcements
MONGODB_DATABASE=hackathon_platform

# -------------------------
# JWT / Auth configuration
# -------------------------
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------
# OAuth (optional)
# -------------------------
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# -------------------------
# Azure Storage (optional)
# -------------------------
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=hackathon-uploads

# -------------------------
# Email (optional)
# -------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# -------------------------
# Application settings
# -------------------------
# Allowed hosts used by CORS middleware (comma-separated or python list)
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# File upload settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf", "ppt", "pptx", "doc", "docx", "zip", "png", "jpg", "jpeg"]

# Optional: third-party integrations (leave empty or set real values)
SENTRY_DSN=
ANALYTICS_ID=

# Environment (development|production)
# ENVIRONMENT removed to match Settings model; configure environment-specific behavior elsewhere if needed
